{% extends 'layout.twig' %}

{% block body %}
    <main class="container">
        <div id="login">
            <div class="container">
                <form id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <div class="form-group">
                                    <label for="user" class="text-info">Utilisateur :</label><br>
                                    <input type="text" name="user" id="user" class="form-control">
                                
                                    <div class="invalid-feedback invalid-user">
                                        Le nom d'utilisateur ou le mot de passe est incorrect.
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-info">Mot de passe :</label><br>
                                    <input type="password" name="password" id="password" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input id="submit" type="submit" name="submit" class="btn btn-lg btn-primary btn-md" value="Connexion">
                                </div>
                            </form>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
